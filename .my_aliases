alias projets='cd ~/Documents/Projets/'
alias ll='ls -lha --color=auto'
alias home='cd ${HOME}'
alias up='cd ..'
alias up2='cd ../..'
alias up3='cd ../../..'
alias up4='cd ../../../..'
alias up5='cd ../../../../..'
alias bye=exit
